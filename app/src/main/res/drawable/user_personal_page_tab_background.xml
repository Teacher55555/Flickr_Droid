<!-- create gradient you want to use with the angle you want to use -->



<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--base shape layer -->
    <item
        android:top="10dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="?attr/colorPrimary"
                android:endColor="@color/colorTransparent"
                />
        </shape>
    </item>
</layer-list>

